{
  "verbose": true,
  "moduleFileExtensions": [
    "ts",
    "js"
  ],
  "transform": {
    "^.+\\.(ts|tsx)$": "ts-jest"
  },
  "globals": {
    "ts-jest": {
      "tsConfigFile": "./tsconfig.json"
    }
  },
  "testMatch": [
    "**/test/*.+(ts)"
  ],
  "collectCoverage": true,
  "coverageReporters": ["json", "html"]
}
